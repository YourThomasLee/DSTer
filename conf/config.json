{
    "name": "WozModel",
    "n_gpu": 1,
    "device": "cuda",
    "arch": {
        "type": "WozModel",
        "args": {
            "domain_slots": ["taxi-leave at", "taxi-destination", "taxi-departure", "taxi-arrive by", "restaurant-food", "restaurant-price range", 
                "restaurant-name", "restaurant-area", "restaurant-book time", "restaurant-book day", "restaurant-book people", "hotel-name", 
                "hotel-area", "hotel-parking", "hotel-price range", "hotel-stars", "hotel-internet", "hotel-type", "hotel-book stay", "hotel-book day", 
                "hotel-book people", "attraction-type", "attraction-name", "attraction-area", "train-leave at", "train-destination", "train-day", 
                "train-arrive by", "train-departure", "train-book people"],
            "slots_classification": ["train-destination", "train-departure", "train-day", "restaurant-area", "restaurant-price range",
                "hotel-area", "hotel-type", "attraction-type", "hotel-price range", "attraction-area", "hotel-stars", "restaurant-book people",
                "restaurant-book day", "hotel-book stay", "hotel-book day", "hotel-book people", "hotel-parking", "hotel-internet", "train-book people"],
            "slots_num": 30,
            "state_domain_card": [6, 158, 27, 1, 1, 4, 1, 48, 6, 11, 8, 8, 3, 78, 4, 6, 7, 3, 6, 8, 8, 66, 103, 182, 4, 97, 255, 251, 
            108, 156, 12, 8, 31, 27, 201],
            "bert_name": "bert-base-uncased",
            "d_model": 64,
            "dropout": 0.1,
            "attn_heads": 4
        }
    },
    "data_loader": {
        "type": "WOZDataLoader",
        "args":{
            "data_dir": "./data/multiwoz",
            "batch_size": 32,
            "version": "21",
            "shuffle": false,
            "num_workers": 0,
            "training": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0025,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "woz_loss",
    "metrics": [
        "slots_gates_accuracy"
    ],
    "scheduler": {
        "type": "NoamLR",
        "args": {
            "model_size": 64,
            "factor": 0.8,
            "warmup_steps": 4000
        }
    },
    "trainer": {
        "epochs": 50,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}
